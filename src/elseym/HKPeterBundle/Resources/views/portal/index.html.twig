{% extends "elseymHKPeterBundle::layout.html.twig" %}
{% block content %}
    <section class="spacey" id="index">
        <div class="page-header">
            <h1>HKPeter <small>a hkp keyserver</small></h1>
        </div>
        <table id="keys" class="table table-striped table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>email</th>
                <th>fingerprint</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for key in keys %}
                <tr>
                    <td>{{ key.id }}</td>
                    <td>{{ key.email }}</td>
                    <td>{{ key.fingerprint }}</td>
                    <td data-sort-value="{{ key.id }}">
                        <a href="{{ path("hp_portal_get", { "fingerprint": key.fingerprint }) }}">
                            <button type="button" class="btn btn-primary btn-xs">download</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
